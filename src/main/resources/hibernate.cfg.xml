<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/control_policial</property>
        <property name="hibernate.connection.username"></property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.query.factory_class">org.hibernate.hql.internal.classic.ClassicQueryTranslatorFactory</property>
    
        <mapping class="prog2.brunetti.entities.Usuario"></mapping>
        <mapping class="prog2.brunetti.entities.Entidad"></mapping>
        <mapping class="prog2.brunetti.entities.Sucursal"></mapping>
        <mapping class="prog2.brunetti.entities.Contrato"></mapping>
        <mapping class="prog2.brunetti.entities.Banda"></mapping>
        <mapping class="prog2.brunetti.entities.Detenido"></mapping>
        <mapping class="prog2.brunetti.entities.Juzgado"></mapping>
        <mapping class="prog2.brunetti.entities.Juez"></mapping>
        <mapping class="prog2.brunetti.entities.Caso"></mapping>
        <mapping class="prog2.brunetti.entities.CondenaDetalle"></mapping>
    </session-factory>
</hibernate-configuration>
